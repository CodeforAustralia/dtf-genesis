<h1>Contracts Awarded</h1>
<p>Here's the list of all the awarded contracts.</p>
<div class="panel-body">
  <table id="result" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Title</th>
        <th>Contract No.</th>
        <th>Total Value</th>
        <th>Start Date</th>
        <th>End Date</th>
      </tr>
    </thead>
    <tbody>
      <% @contracts.each do |f| %>
      <tr>
        <td><%= f.title %></td>
        <td><%= f.contract_number %></td>
        <td><%= f.total_value %></td>
        <td><%= f.start_date %></td>
        <td><%= f.end_date %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


