<p id="notice"><%= notice %></p>

<p> <strong>Name:</strong> <%= @department.name %> (<%= @department.short_name %>)</p>

<p>
  <strong>Vic Tenders Reference:</strong>
  <%= @department.vt_number %>
</p>




<h3>Agency contracts:</h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Value</th>
      <th>Supplier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |con| %>
      <tr>
        <td><%= con.vt_title %></td>
        <td><%= con.vt_total_value %></td>
        <td><%= con.vt_supplier_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
