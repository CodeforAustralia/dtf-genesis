<dl class="dl-horizontal">
  <h3>Contract Details:</h3>
  <dt><h2>Title</h2></dt>
  <dd><h2><%= @contract.vt_title %></h2></dd>

  <dt><h4>Tenders VIC source</h4></dt>
  <dd><h4><%= link_to "Reference #{@contract.project_id}", "http://www.tenders.vic.gov.au/tenders/contract/view.do?id=#{@contract.project_id}" %></h4></dd>

  <dt><h4>Type and Status</h4></dt>
  <dd><h4><%= lookup_contract_type_name(@contract.vt_contract_type_id) %> - <%= lookup_contract_status_name(@contract.vt_status_id) %></h4></dd>

  <dt><h4>Description</h4></dt>
  <dd><h4><%= @contract.vt_contract_description %></h4></dd>

  <dt><h4><h4>Dates</h4></dt>
  <dd><h4><%= @contract.vt_start_date %> -> <%= @contract.vt_end_date %></h4></dd>

  <dt><h4>Value</h4></dt>
  <dd><h4><%= humanized_money_with_symbol(@contract.vt_total_value) %></h4></dd>
  <dt><h4>Value type</h4></dt>
  <dd><h4><%= @contract.vt_value_type_id %></h4></dd>

  <dt><h4>Department</h4></dt>
  <% department = Department.where(vt_number: @contract.vt_department_id).first %>
  <% if department %>
    <dd><h4><%= link_to lookup_department_name(@contract.vt_department_id), department_path(department) %> (<%= lookup_department_short_name(@contract.vt_department_id) %>)</h4></dd>
  <% else %>
    <dd><h4> Unknown agency found: <%= @contract.vt_department_id %></h4></dd>
  <% end %>
  <dt><h4>Contact</h4></dt>
  <dd><h4><%= @contract.vt_agency_person %></h4></dd>

  <dt><h4>Phone</h4></dt>
  <dd><h4><%= @contract.vt_agency_phone %></h4></dd>

  <dt><h4>Email</h4></dt>
  <dd><h4><%= @contract.vt_agency_email %></h4></dd>

  <dt><h4>Supplier</h4></dt>
  <% if @contract.vt_supplier_id == 0 %>
    <dd><h4><%= @contract.vt_supplier_name %></h4></dd>
  <% else %>
    <dd><h4> <%= link_to("#{@contract.vt_supplier_name}", supplier_path(@contract.vt_supplier_id)) %></h4></dd>
  <% end %>

  <dt><h4>ABN</h4></dt>
  <dd><h4><%= @contract.vt_supplier_abn %></h4></dd>

  <dt><h4>ACN</h4></dt>
  <dd><h4><%= @contract.vt_supplier_acn %></h4></dd>

  <dt><h4>Address</h4></dt>
  <dd><h4><%= @contract.vt_supplier_address %></h4></dd>

  <dt><h4>Email</h4></dt>
  <dd><h4><%= @contract.vt_supplier_email %></h4></dd>

  <dt><h4>Reporting</h4></dt>
  <% if (@cpr_reports.count + @csr_reports.count + @ccr_reports.count) == 0 %>
    <dd><h4>No reporting on project</h4></dd>
  <% end %>
  <% @cpr_reports.each do |report| %>
    <dd><h4><%= link_to "CPR Performance Report", report %></h4></dd>
  <% end %>
  <% @csr_reports.each do |report| %>
    <dd><h4><%= link_to "CSR Performance Report", report %></h4></dd>
  <% end %>
  <% @ccr_reports.each do |report| %>
    <% if report.score_overall == nil %>
      <dd><h4><%= link_to "incomplete CCR Performance Report #{report.id}", report %></h4></dd>
    <% else %>
      <dd><h4><%= link_to "CCR Performance Report #{report.id} (score:#{report.score_overall})", report %></h4></dd>

    <% end %>
  <% end %>
  <td><dd><h5><%= link_to "Initiate reporting cycle", new_ccr_performance_report_path(:contract_id => @contract.id) %></h5></dd></td>

  <dt><h4>UNSPSC Code</h4></dt>
  <dd><h4><%= @contract.vt_unspc_id %></h4></dd>

  <dt><h4>Record created</h4></dt>
  <dd><h4><%= @contract.created_at %></h4></dd>
  <dt><h4>Record modified</h4></dt>
  <dd><h4><%= @contract.updated_at %></h4></dd>

</dl>
