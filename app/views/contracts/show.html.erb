<dl class="dl-horizontal">

  <h3>Contract Details:</h3>
  <dd><h2><%= @contract.vt_title %></h2></dd>
  <dd><h4>Tenders VIC: <%= link_to "Reference #{@contract.project_id}", "http://www.tenders.vic.gov.au/tenders/contract/view.do?id=#{@contract.project_id}" %></h4></dd>
  <dd><h4>Type and Status: <%= lookup_contract_type_name(@contract.vt_contract_type_id) %> - <%= lookup_contract_status_name(@contract.vt_status_id) %></h4></dd>

  <dt><h4>Description:</h4></dt>
  <dd><h4><%= @contract.vt_contract_description %></h4></dd>

  <dt><h4><h4>Dates:</h4></dt>
  <dd><h4><%= @contract.vt_start_date %> -> <%= @contract.vt_end_date %></h4></dd>

  <dt><h4>Value:</h4></dt>
  <dd><h4><%= humanized_money_with_symbol(@contract.vt_total_value) %></h4></dd>
  <dd><h4>Value type: <%= @contract.vt_value_type_id %></h4></dd>

  <dt><h4>Department:</h4></dt>
  <% department = Department.where(vt_number: @contract.vt_department_id).first %>
  <% if department %>
    <dd><h4><%= link_to lookup_department_name(@contract.vt_department_id), department_path(department) %> (<%= lookup_department_short_name(@contract.vt_department_id) %>)</h4></dd>
  <% else %>
    <dd><h4> Unknown agency found: <%= @contract.vt_department_id %></h4></dd>
  <% end %>
  <dd><h4>Contact: <%= @contract.vt_agency_person %></h4></dd>
  <dd><h4>Phone: <%= @contract.vt_agency_phone %></h4></dd>
  <dd><h4>Email: <%= @contract.vt_agency_email %></h4></dd>

  <dt><h4>Supplier:</h4></dt>
  <% if @contract.vt_supplier_id == 0 %>
    <dd><h4><%= @contract.vt_supplier_name %></h4></dd>
  <% else %>
    <dd><h4> <%= link_to("#{@contract.vt_supplier_name}", supplier_path(@contract.vt_supplier_id)) %></h4></dd>
  <% end %>
  <dd><h4>ABN: <%= @contract.vt_supplier_abn %></h4></dd>
  <dd><h4>ACN: <%= @contract.vt_supplier_acn %></h4></dd>
  <dd><h4>Address: <%= @contract.vt_supplier_address %></h4></dd>
  <dd><h4>Email: <%= @contract.vt_supplier_email %></h4></dd>

  <dt><h4>UNSPSC Code:</h4></dt>
  <dd><h4><%= @contract.vt_unspc_id %></h4></dd>

  <dt><h4>Metadata:</h4></dt>
  <dd><h4>Record created: <%= @contract.created_at %></h4></dd>
  <dd><h4>Record modified: <%= @contract.updated_at %></h4></dd>

</dl>
