%div.media
  %div.media-body
    %table.table-striped
      %thead.index-haml-pages
        %th.col-md-4= smart_listing.sortable "Description", "csr_description"
        %th.col-md-1= smart_listing.sortable "Location", "csr_location"
        %th.col-md-1= smart_listing.sortable "Value", "csr_value"
        %th.col-md-1= smart_listing.sortable "Start", "csr_start_date"
        %th.col-md-1= smart_listing.sortable "End", "csr_finish_date"
        %th.col-md-3= smart_listing.sortable "Comment", "csr_comment"
        / %th.col-md-1= smart_listing.sortable "Details", "actions"

      %tbody
        - smart_listing.collection.each do |o|
          %tr.editable.contracts-row{:data => {:id => o.id}}
            = smart_listing.render object: o, partial: "csr_contracts/csr_contract", locals: {object: o}

        / %div.smart-listing-new-button
        /   = smart_listing.item_new colspan: 12, link: new_contract_path
    :javascript
      findCsrContractId();

    = smart_listing.paginate
    = smart_listing.pagination_per_page_links
